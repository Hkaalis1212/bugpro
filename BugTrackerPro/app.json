{
  "name": "AI Bug Reporting System",
  "description": "A comprehensive AI-powered bug reporting system with GitHub integration",
  "keywords": ["flask", "ai", "bug-tracking", "github", "stripe"],
  "website": "https://github.com/yourusername/bug-reporting-system",
  "repository": "https://github.com/yourusername/bug-reporting-system",
  "logo": "https://raw.githubusercontent.com/yourusername/bug-reporting-system/main/static/logo.png",
  "success_url": "/",
  "scripts": {
    "postdeploy": "python -c \"from app import app, db; app.app_context().push(); db.create_all(); print('Database initialized')\""
  },
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL database URL",
      "value": "postgresql://user:password@host:5432/database"
    },
    "SESSION_SECRET": {
      "description": "Secret key for session encryption",
      "generator": "secret"
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key for bug analysis",
      "value": ""
    },
    "STRIPE_SECRET_KEY": {
      "description": "Stripe secret key for payments",
      "value": ""
    },
    "STRIPE_PUBLISHABLE_KEY": {
      "description": "Stripe publishable key",
      "value": ""
    },
    "GITHUB_CLIENT_ID": {
      "description": "GitHub OAuth client ID",
      "value": ""
    },
    "GITHUB_CLIENT_SECRET": {
      "description": "GitHub OAuth client secret",
      "value": ""
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    "heroku-postgresql:mini"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}